<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectoSeguridad.controlador.FXMLAdministradorComunicadosController">
    <children>
        <Label layoutX="400.0" layoutY="30.0" text="Gestión de Comunicados" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="24.0" />
            </font>
        </Label>
        
        <!-- Botón Cerrar Sesión -->
        <Button fx:id="btnCerrarSesion" layoutX="800.0" layoutY="10.0" mnemonicParsing="false" onAction="#clicBotonCerrarSesion" prefHeight="37.0" prefWidth="132.0" style="-fx-background-color: #26408B; -fx-border-color: #26408B; -fx-cursor: HAND;" text="Cerrar sesión" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Button>

        <SplitPane dividerPositions="0.3" layoutX="40.0" layoutY="80.0" prefHeight="580.0" prefWidth="920.0">
            <!-- PANEL IZQUIERDO: REGISTRO DE NUEVO COMUNICADO -->
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="578.0" prefWidth="290.0">
                    <children>
                        <Label layoutX="10.0" layoutY="10.0" text="Publicar Nuevo Comunicado" textFill="#26408B">
                            <font>
                                <Font name="Gill Sans MT" size="16.0" />
                            </font>
                        </Label>
                        
                        <Label layoutX="10.0" layoutY="50.0" text="Título:" />
                        <TextField fx:id="tfTitulo" layoutX="10.0" layoutY="75.0" prefWidth="250.0" promptText="Título corto del aviso" />
                        <Label fx:id="lbErrorTitulo" layoutX="10.0" layoutY="105.0" textFill="red" />
                        
                        <Label layoutX="10.0" layoutY="130.0" text="Contenido (Mensaje completo):" />
                        <TextArea fx:id="taContenido" layoutX="10.0" layoutY="155.0" prefHeight="300.0" prefWidth="250.0" wrapText="true" />
                        <Label fx:id="lbErrorContenido" layoutX="10.0" layoutY="460.0" textFill="red" />

                        <Button fx:id="btnPublicar" layoutX="10.0" layoutY="490.0" mnemonicParsing="false" onAction="#clicBotonPublicar" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #00AF4D; -fx-cursor: HAND;" text="Publicar Comunicado" textFill="WHITE">
                            <font>
                                <Font name="Gill Sans MT" size="14.0" />
                            </font>
                        </Button>
                        
                        <Label fx:id="lbMensajePublicacion" layoutX="10.0" layoutY="540.0" prefWidth="250.0" textFill="#26408B" />
                    </children>
                </AnchorPane>
                
                <!-- PANEL DERECHO: CONSULTA DE COMUNICADOS -->
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="578.0" prefWidth="600.0">
                    <children>
                        <Label layoutX="10.0" layoutY="10.0" text="Historial de Comunicados Publicados" textFill="#26408B">
                            <font>
                                <Font name="Gill Sans MT" size="16.0" />
                            </font>
                        </Label>
                        
                        <TableView fx:id="tvComunicados" layoutX="10.0" layoutY="40.0" prefHeight="520.0" prefWidth="610.0">
                            <columns>
                                <TableColumn fx:id="colTitulo" prefWidth="150.0" text="Título" />
                                <TableColumn fx:id="colContenido" prefWidth="250.0" text="Contenido" />
                                <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha Pub." />
                                <TableColumn fx:id="colAutor" prefWidth="100.0" text="Autor" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>

        <!-- Footer -->
        <Pane layoutY="661.0" prefHeight="39.0" prefWidth="1000.0" style="-fx-background-color: #26408B; -fx-border-color: #00AF4D;">
            <children>
                <Label layoutX="820.0" layoutY="9.0" text="Colegio Horizonte" textFill="WHITE">
                    <font>
                        <Font name="Gill Sans MT" size="18.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>