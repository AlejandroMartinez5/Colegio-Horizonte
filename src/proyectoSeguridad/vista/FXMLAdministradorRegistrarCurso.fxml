<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.collections.FXCollections?>
<?import java.util.ArrayList?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectoSeguridad.controlador.FXMLAdministradorRegistrarCursoController">
    <children>
        <!-- Título -->
        <Label layoutX="140.0" layoutY="30.0" text="Registro de Curso y Horarios" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="24.0" />
            </font>
        </Label>
        
        <!-- Logo -->
        <ImageView fitHeight="136.0" fitWidth="132.0" layoutX="680.0" layoutY="141.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../recursos/LogoColegio.png" />
            </image>
        </ImageView>

        <!-- Botón Cerrar Sesión -->
        <Button fx:id="btnCerrarSesion" layoutX="670.0" layoutY="10.0" mnemonicParsing="false" onAction="#clicBotonCerrarSesion" prefHeight="37.0" prefWidth="132.0" style="-fx-background-color: #26408B; -fx-border-color: #26408B; -fx-cursor: HAND;" text="Cerrar sesión" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Button>

        <!-- SECCIÓN DE DETALLES DEL CURSO -->
        <Label layoutX="50.0" layoutY="90.0" text="Detalles del Curso" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="18.0" />
            </font>
        </Label>
        <GridPane layoutX="50.0" layoutY="120.0" prefHeight="130.0" prefWidth="400.0" vgap="15" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Nombre de la Materia:" />
            <TextField fx:id="tfNombreMateria" promptText="Matemáticas Avanzadas" GridPane.columnIndex="1" />

            <Label text="Clave del Curso (Única):" GridPane.rowIndex="1" />
            <TextField fx:id="tfClaveCurso" promptText="MAT-401" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Seleccionar Docente:" GridPane.rowIndex="2" />
            <ComboBox fx:id="cbDocente" prefWidth="250.0" promptText="Seleccione un docente" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
        </GridPane>

        <!-- SECCIÓN DE HORARIOS -->
        <Label layoutX="50.0" layoutY="270.0" text="Horarios del Curso" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="18.0" />
            </font>
        </Label>

        <!-- Controles de Entrada de Horario -->
        <HBox layoutX="50.0" layoutY="310.0" spacing="10" prefWidth="750.0" alignment="CENTER_LEFT">
            <Label text="Día:" alignment="CENTER_LEFT" />
            <ComboBox fx:id="cbDiaSemana" prefWidth="120" promptText="Día">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Lunes" />
                        <String fx:value="Martes" />
                        <String fx:value="Miércoles" />
                        <String fx:value="Jueves" />
                        <String fx:value="Viernes" />
                        <String fx:value="Sábado" />
                    </FXCollections>
                </items>
            </ComboBox>
            <Label text="Inicio (HH:MM):" alignment="CENTER_LEFT" />
            <TextField fx:id="tfHoraInicio" prefWidth="80" promptText="07:00" />
            <Label text="Fin (HH:MM):" alignment="CENTER_LEFT" />
            <TextField fx:id="tfHoraFin" prefWidth="80" promptText="08:30" />
            <Label text="Aula:" alignment="CENTER_LEFT" />
            <TextField fx:id="tfAula" prefWidth="100" promptText="A101" />
            
            <Button fx:id="btnAgregarHorario" mnemonicParsing="false" onAction="#clicBotonAgregarHorario" style="-fx-background-color: #26408B; -fx-cursor: HAND;" text="Añadir" textFill="WHITE" />
        </HBox>

        <!-- Tabla de Horarios Temporales -->
        <TableView fx:id="tvHorarios" layoutX="50.0" layoutY="360.0" prefHeight="180.0" prefWidth="750.0">
            <columns>
                <TableColumn fx:id="colDia" prefWidth="150.0" text="Día" />
                <TableColumn fx:id="colInicio" prefWidth="150.0" text="Hora Inicio" />
                <TableColumn fx:id="colFin" prefWidth="150.0" text="Hora Fin" />
                <TableColumn fx:id="colAula" prefWidth="150.0" text="Aula" />
                <TableColumn fx:id="colAccion" prefWidth="150.0" text="Acción" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Botón de Quitar Horario -->
        <Button fx:id="btnQuitarHorario" layoutX="50.0" layoutY="550.0" mnemonicParsing="false" onAction="#clicBotonQuitarHorario" style="-fx-background-color: #C70039; -fx-cursor: HAND;" text="Quitar Horario Seleccionado" textFill="WHITE" />

        <!-- Botón Registrar Curso Final -->
        <Button fx:id="btnRegistrarCurso" layoutX="50.0" layoutY="600.0" mnemonicParsing="false" onAction="#clicBotonRegistrarCurso" prefHeight="50.0" prefWidth="750.0" style="-fx-background-color: #00AF4D; -fx-border-color: #26408B; -fx-cursor: HAND;" text="Registrar Curso y Horarios" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="16.0" />
            </font>
        </Button>

        <!-- Mensaje de Error/Éxito -->
        <Label fx:id="lbMensaje" layoutX="50.0" layoutY="660.0" textFill="red" />

        <!-- Footer -->
        <Pane layoutY="661.0" prefHeight="39.0" prefWidth="850.0" style="-fx-background-color: #26408B; -fx-border-color: #00AF4D;">
            <children>
                <Label layoutX="669.0" layoutY="9.0" text="Colegio Horizonte" textFill="WHITE">
                    <font>
                        <Font name="Gill Sans MT" size="18.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>