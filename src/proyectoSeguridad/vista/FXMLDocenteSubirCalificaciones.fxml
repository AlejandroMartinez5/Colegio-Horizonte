<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectoSeguridad.controlador.FXMLDocenteSubirCalificacionesController">
    <children>
        <!-- Encabezado -->
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="730.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../recursos/LogoColegio.png" />
            </image>
        </ImageView>
        
        <Label layoutX="50.0" layoutY="30.0" text="Registrar Calificación" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="24.0" />
            </font>
        </Label>

        <!-- Botón Regresar -->
        <Button fx:id="btnRegresar" layoutX="600.0" layoutY="30.0" mnemonicParsing="false" onAction="#clicBotonRegresar" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #26408B; -fx-cursor: HAND;" text="Regresar" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Button>

        <!-- Formulario -->
        <GridPane layoutX="50.0" layoutY="120.0" prefHeight="250.0" prefWidth="600.0" vgap="20" hgap="20">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="350.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Selección de Curso -->
                <Label text="1. Seleccione Curso:" textFill="#26408B">
                    <font>
                        <Font name="Gill Sans MT Bold" size="16.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cbCursos" onAction="#seleccionarCurso" prefHeight="35.0" prefWidth="350.0" promptText="-- Elija un grupo --" GridPane.columnIndex="1" />

                <!-- Selección de Alumno -->
                <Label text="2. Seleccione Alumno:" textFill="#26408B" GridPane.rowIndex="1">
                    <font>
                        <Font name="Gill Sans MT Bold" size="16.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cbAlumnos" prefHeight="35.0" prefWidth="350.0" promptText="-- Elija un alumno --" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Ingreso de Calificación -->
                <Label text="3. Asignar Puntaje (0-10):" textFill="#26408B" GridPane.rowIndex="2">
                    <font>
                        <Font name="Gill Sans MT Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="tfPuntaje" prefHeight="35.0" promptText="Ej. 8.5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <!-- Botón Guardar -->
        <Button fx:id="btnGuardar" layoutX="220.0" layoutY="400.0" mnemonicParsing="false" onAction="#clicBotonGuardar" prefHeight="45.0" prefWidth="350.0" style="-fx-background-color: #00AF4D; -fx-border-color: #26408B; -fx-cursor: HAND;" text="Guardar Calificación" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="18.0" />
            </font>
        </Button>

        <!-- Mensajes de Feedback -->
        <Label fx:id="lbMensaje" alignment="CENTER" layoutX="50.0" layoutY="460.0" prefWidth="700.0" textFill="#c70039">
             <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Label>

        <!-- Footer -->
        <Pane layoutY="561.0" prefHeight="39.0" prefWidth="850.0" style="-fx-background-color: #26408B; -fx-border-color: #00AF4D;">
            <children>
                <Label layoutX="669.0" layoutY="9.0" text="Colegio Horizonte" textFill="WHITE">
                    <font>
                        <Font name="Gill Sans MT" size="18.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>