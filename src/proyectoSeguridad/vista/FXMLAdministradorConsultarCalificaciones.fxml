<AnchorPane id="AnchorPane" prefHeight="610.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyectoSeguridad.controlador.FXMLAdministradorConsultarCalificacionesController">
    <children>
        <Label layoutX="300.0" layoutY="30.0" text="Consultar Calificaciones" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="24.0" />
            </font>
        </Label>
        
        <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="780.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../recursos/LogoColegio.png" /> 
            </image>
        </ImageView>

        <Button fx:id="btnCerrarSesion" layoutX="730.0" layoutY="10.0" mnemonicParsing="false" onAction="#clicBotonCerrarSesion" prefHeight="37.0" prefWidth="132.0" style="-fx-background-color: #26408B; -fx-border-color: #26408B; -fx-cursor: HAND;" text="Cerrar sesiÃ³n" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
            <graphic>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../recursos/iconoCerrarSesion.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <GridPane layoutX="50.0" layoutY="100.0" prefHeight="90.0" prefWidth="780.0" vgap="10" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="350.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            
            <Label text="Buscar Curso:" GridPane.rowIndex="0" />
            <TextField fx:id="tfBuscarCurso" onKeyReleased="#filtrarCursos" promptText="Nombre o Clave del Curso" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <ComboBox fx:id="cbCurso" onAction="#clicConsultar" prefWidth="350" promptText="Seleccione un Curso" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnConsultarCurso" mnemonicParsing="false" onAction="#clicConsultar" style="-fx-background-color: #26408B; -fx-cursor: HAND;" text="Consultar" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        </GridPane>

        <TableView fx:id="tvCalificaciones" layoutX="50.0" layoutY="210.0" prefHeight="320.0" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="colNombreMateria" prefWidth="250.0" text="Materia" />
                <TableColumn fx:id="colAlumno" prefWidth="250.0" text="Alumno" />
                <TableColumn fx:id="colPuntaje" prefWidth="100.0" text="Puntaje" />
                <TableColumn fx:id="colFechaRegistro" prefWidth="200.0" text="Fecha Registro" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Label fx:id="lbResumen" layoutX="50" layoutY="540" textFill="#26408B">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Label>
        
        <Button layoutX="680.0" layoutY="540.0" mnemonicParsing="false" onAction="#clicExportarPDF" prefHeight="30.0" prefWidth="170.0" style="-fx-background-color: #00AF4D; -fx-cursor: HAND;" text="Exportar a PDF" textFill="WHITE">
            <font>
                <Font name="Gill Sans MT" size="14.0" />
            </font>
        </Button>
        
        <Pane layoutY="571.0" prefHeight="39.0" prefWidth="900.0" style="-fx-background-color: #26408B; -fx-border-color: #00AF4D;">
            <children>
                <Label layoutX="700.0" layoutY="9.0" text="Colegio Horizonte" textFill="WHITE">
                    <font>
                        <Font name="Gill Sans MT" size="18.0" />
                    </font>
                </Label>
            </children>
        </Pane>
    </children>
</AnchorPane>